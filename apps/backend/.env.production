# Production Environment Variables for Perimetre360
NODE_ENV=production

# Database
DATABASE_URL="mysql://user_360flow:db360flow@localhost:3306/360flow?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here-change-in-production"
