{
  "version": 2,
  "builds": [
    {
      "src": "apps/backend/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "apps/backend/dist/**",
          "apps/backend/prisma/**",
          "apps/backend/package.json"
        ],
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/backend/dist/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/frontend/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
